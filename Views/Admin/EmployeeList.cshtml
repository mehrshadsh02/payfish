@model List<payfish.ViewModels.Admin.EmployeeListViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "لیست کارمندان";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>لیست کارمندان</h2>
    <a href="@Url.Action("AddEmployee", "Admin")" class="btn btn-primary mb-3">
        <i class="fas fa-user-plus"></i> افزودن کارمند جدید
    </a>
</div>

<div class="card">
    <div class="card-header bg-light fw-bold">
        فهرست کارمندان
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>شناسه</th>
                        <th>نام کامل</th>
                        <th>کد ملی</th>
                        <th>تاریخ استخدام</th>
                        <th>سمت</th>
                        <th>وضعیت</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.Id</td>
                            <td>@emp.FullName</td>
                            <td>@emp.Code</td>
                            <td>@emp.HireDate.ToString("yyyy/MM/dd")</td>
                            <td>@emp.Position</td>
                            <td>
                                @if (emp.Status == "فعال")
                                {
                                    <span class="badge bg-success">فعال</span>
                                }
                                else if (emp.Status == "مرخصی")
                                {
                                    <span class="badge bg-warning text-dark">مرخصی</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">نامشخص</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" href="    "><i class="fas fa-eye"></i></a>
                                <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("EditEmployee", "Admin", new { id = emp.Id })">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a class="btn btn-sm btn-outline-danger" href="#"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                      }
                </tbody>
            </table>
        </div>
    </div>
</div>
