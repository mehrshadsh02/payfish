@model List<payfish.Models.Employee>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "داشبورد مدیریت";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>داشبورد مدیریت</h2>
    <div class="d-flex">
        <div class="input-group" style="width: 250px;">
            <input type="text" class="form-control" placeholder="جستجو...">
            <button class="btn btn-primary" type="button">
                <i class="fas fa-search"></i>
            </button>
        </div>
        <button class="btn btn-outline-secondary me-2 position-relative">
            <i class="fas fa-bell"></i>
            <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">3</span>
        </button>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="stat-card">
            <i class="fas fa-users"></i>
            <div class="number">142</div>
            <div class="label">کارمند فعال</div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="stat-card">
            <i class="fas fa-user-clock"></i>
            <div class="number">8</div>
            <div class="label">مرخصی امروز</div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="stat-card">
            <i class="fas fa-file-invoice-dollar"></i>
            <div class="number">3.2B</div>
            <div class="label">حقوق این ماه</div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="stat-card">
            <i class="fas fa-birthday-cake"></i>
            <div class="number">5</div>
            <div class="label">تولدهای امروز</div>
        </div>
    </div>
</div>

<!-- Recent Employees -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">کارمندان اخیر</h5>
        <a href="#" class="btn btn-sm btn-primary">مشاهده همه</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>شناسه</th>
                        <th>نام</th>
                        <th>پست سازمانی</th>
                        <th>تاریخ استخدام</th>
                        <th>وضعیت</th>
                        @* <th>عملیات</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@($"EMP-{emp.Id:D4}")</td>
                            <td>@emp.FullName</td>
                            <td>@(!string.IsNullOrWhiteSpace(emp.Position) ? emp.Position : "نامشخص")</td>
                            <td>
                                @(emp.HireDate > DateTime.MinValue
                                    ? emp.HireDate.ToString("yyyy/MM/dd")
                                    : Html.Raw("<span class='text-muted'>نامشخص</span>"))
                            </td>
                            <td><span class="badge bg-success">فعال</span></td>
                            @* <td> *@
                            @*     <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button> *@
                            @*     <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></button> *@
                            @*     <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button> *@
                            @* </td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
