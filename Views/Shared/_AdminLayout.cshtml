<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - پنل مدیریت Payfish</title>

    <!-- Bootstrap RTL -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- فونت فارسی وزیر -->
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn-font@v33.003/Vazirmatn-font-face.css" rel="stylesheet">
    <!-- فایل CSS اختصاصی -->
    <link rel="stylesheet" href="~/css/admin.css">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <div class="admin-sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-fish"></i>
                <span>Payfish HR</span>
            </div>
            <nav class="sidebar-nav">
                <a class="nav-link active" href="~/Admin/Dashboard">
                    <i class="fas fa-tachometer-alt"></i>
                    داشبورد
                </a>
                <a class="nav-link" asp-controller="Admin" asp-action="EmployeeList">
                    <i class="fas fa-users"></i>
                    لیست کارمندان
                </a>
                <a class="nav-link" href="#">
                    <i class="fas fa-file-invoice-dollar"></i>
                    مدیریت حقوق
                </a>
                <a class="nav-link" href="#">
                    <i class="fas fa-chart-line"></i>
                    گزارشات
                </a>
                <a class="nav-link" href="#">
                    <i class="fas fa-cog"></i>
                    تنظیمات
                </a>
                <hr>
                <a class="nav-link" href="@Url.Action("Logout", "Admin")">
                    <i class="fas fa-sign-out-alt"></i>
                    خروج
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <main class="admin-main">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>