<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - مدیریت Payfish</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Vazirmatn', sans-serif;
            background-color: #f1f3f5;
        }

        .admin-sidebar {
            min-height: 100vh;
            background-color: #343a40;
            color: white;
        }

            .admin-sidebar a {
                color: #adb5bd;
                text-decoration: none;
                display: block;
                padding: 1rem;
                transition: background 0.3s;
            }

                .admin-sidebar a:hover,
                .admin-sidebar a.active {
                    background-color: #495057;
                    color: #fff;
                }

        .admin-header {
            background-color: #212529;
            padding: 1rem;
            color: white;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="admin-sidebar p-3">
            <h4 class="text-center mb-4">مدیریت Payfish</h4>
            <a href="@Url.Action("Dashboard", "Admin")" class="@((ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard") ? "active" : "")">
                <i class="bi bi-house-door"></i> داشبورد
            </a>
            <a href="@Url.Action("Employees", "Admin")" class="@((ViewContext.RouteData.Values["action"]?.ToString() == "Employees") ? "active" : "")">
                <i class="bi bi-people"></i> کارمندان
            </a>
            <a href="@Url.Action("UploadPaystub", "Admin")">
                <i class="bi bi-upload"></i> بارگذاری فیش
            </a>
            <a href="@Url.Action("Logout", "Admin")">
                <i class="bi bi-box-arrow-right"></i> خروج
            </a>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <div class="admin-header">
                <h5 class="m-0">@ViewBag.Title</h5>
            </div>
            <div class="mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
