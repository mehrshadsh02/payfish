<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - پنل کاربری | Payfish</title>

    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn-font@v33.003/Vazirmatn-font-face.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Vazirmatn', 'Roboto', sans-serif;
            background-color: #f8f9fc;
            color: #5a5c69;
        }

        .sidebar {
            background: linear-gradient(180deg, #4e73df 0%, #224abe 100%);
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: rgba(255, 255, 255, 0.9);
                padding: 1rem;
                font-weight: 600;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: rgba(255, 255, 255, 0.1);
                    color: white;
                }

        .content {
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar p-3 text-white" style="width: 260px;">
            <h4 class="mb-4">Payfish</h4>
            <ul class="nav flex-column">
                <li class="nav-item"><a href="#" class="nav-link active"><i class="bi bi-file-earmark-text"></i> فیش‌های حقوقی</a></li>
                <li class="nav-item"><a href="#" class="nav-link"><i class="bi bi-person"></i> اطلاعات پرسنلی</a></li>
                <li class="nav-item"><a href="#" class="nav-link"><i class="bi bi-box-arrow-right"></i> خروج</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 content">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
